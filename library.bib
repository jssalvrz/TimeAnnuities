publisher = {Cambridge University Press},
title = {{Correlations between insurance lines of business: An illusion or a real phenomenon? some methodological considerations}},
url = {https://www.cambridge.org/core/article/correlations-between-insurance-lines-of-business-an-illusion-or-a-real-phenomenon-some-methodological-considerations/5BBB6C52A882572B4F4D587984ED10A7},
