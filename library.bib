file = {:C$\backslash$:/Users/z3509687/Documents/Mendeley Desktop/BMJ Global Health/Canudas-Romo, Aburto - 2019.pdf:pdf},
issn = {20597908},
journal = {BMJ Global Health},
keywords = {Latin America and the Caribbean,homicides,life expectancy,medical demography,public health,violence},
